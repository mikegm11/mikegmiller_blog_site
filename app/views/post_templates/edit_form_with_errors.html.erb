<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit post #<%= @post.id %>
</h1>

<hr>

<form action="/update_post/<%= @post.id %>" method="post">

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @post.title %>">
  </div>

  <div class="form-group">
    <label for="text">
      Text
    </label>

    <input type="text" id="text" name="text" class="form-control" value="<%= @post.text %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update post
  </button>
</form>

<hr>

<a href="/posts">
  Go back
</a>
